<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/home-navbar.ejs') %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
      
        <% result.articles.rows.forEach(article => { %>
          <div class="card mb-3">
            <div class="card-header">
              <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
              <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="col-sm-12 mb-5  d-flex justify-content-end">
        <% if(result.page > 1) { %>
          <a href="/articles/page/<%= result.page -1 %>">Prev</a>
        <% } %>
        <% if(result.next) { %>
          <a href="/articles/page/<%= result.page +1 %>"  class="ml-4">Next</a>
        <% } %>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>