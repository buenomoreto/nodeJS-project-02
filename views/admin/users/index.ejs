<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/navbar.ejs') %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-10 mb-3 text-center text-uppercase d-flex justify-content-between align-items-center">
        <h2 class="font-weight-bold">Usuários</h2>
        <a href="/admin/users/create">
          <button class="mb-0 btn btn-success text-center text-uppercase font-weight-bold">
            Cadastrar novo usuário
          </button>
        </a>
      </div>
      <div class="col-sm-10">
        <table class="table table-bordered">
          <thead> 
            <tr>
              <th>
                ID
              </th>
              <th>
                Email
              </th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.email %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>